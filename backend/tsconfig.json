{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,

    "skipLibCheck": true,
    "noEmitOnError": false,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "isolatedModules": false
  },
  "include": ["src"],
}
