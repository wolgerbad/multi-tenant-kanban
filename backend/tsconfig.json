{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,

    "noEmitOnError": true,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"]
}
